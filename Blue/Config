      <error statusCode="500" path="/Error" responseMode="ExecuteURL" />
      -->
    </httpErrors>
  </system.webServer>

  <system.net>
    <mailSettings>
      <!-- Example local SMTP settings -->
      <smtp from="LocalAdmin@aciweb.local">
